@using Pharmacy.Models
@model store

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/Assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Assets/css/style.css">
    <title>Edit Store</title>
</head>
<body style="background-image: url('/Assets/images/phar.png'); background-repeat:no-repeat; background-size:100% 100%">
    <form action="/Home/EditStore?type=save" method="get">
        <div class="inner-layer">
            <div class="container">
                <div class="row no-margin">
                    <div class="col-sm-7">
                        <div class="content">
                            <h1>Pharmacy</h1>
                            <h4>Edit Store</h4>
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <div class="form-data">
                            <div class="form-head">
                                <h2>Store</h2>
                            </div>
                            <div class="form-body">
                                <div class="row form-row">
                                    <input type="text" placeholder="Enter Item Store" name="store_name" class="form-control" value="@Model.store_name">
                                    <input type="hidden" name="id" value="@Model.id">

                                </div>
                                <div class="row form-row">
                                    <button class="btn btn-success btn-appointment">
                                        Edit Store
                                    </button>
                                </div>
                                <div class="btn btn-success btn-appointment">
                                    <a href="/home/Stores" style="text-decoration: none"><p class="m-0" style="color:white" ;">BACK </p> </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>

<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="~/Assets/js/jquery-3.3.1.min.js"></script>
<script src="~/Assets/js/popper.min.js"></script>
<script src="~/Assets/js/bootstrap.min.js"></script>
<script src="~/Assets/js/bootstrap-datepicker.js"></script>

